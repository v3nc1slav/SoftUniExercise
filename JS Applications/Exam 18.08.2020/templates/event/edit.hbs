{{> header}}
        <h1>Edit Offer</h1>
        <p class="message"></p>
        <form action="#/edit/{{event.objectId}}" method="post">
            <div>
                <input type="text" placeholder="Name..." name="name" value="{{event.name}}">
            </div>
            <div>
                <input type="text" placeholder="Price..." name="price" value="{{event.price}}">
            </div>
            <div>
                <input type="text" placeholder="Image url..." name="imageUrl" value="{{event.imageUrl}}">
            </div>
            <div>
                <textarea placeholder="Give us some description about this offer..."  name="description">{{event.description}}</textarea>
            </div>
            <div>
                <input type="text" placeholder="Brand..." name="brand" value="{{event.brand}}">
            </div>
            <div>
                <button>Edit</button>
            </div>
        </form>
{{> footer}}